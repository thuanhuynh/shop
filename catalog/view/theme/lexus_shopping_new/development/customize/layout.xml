<?xml version="1.0" encoding="UTF-8" ?>
<themeeditor>
	<author>pavotheme</author>
	<name>Live Theme Editor</name>	
	<layout>	
		<item>
			<label>Template Layout Mode</label>
			<block>template_layout</block>
			<default>fullwidth</default>
			<option>
				<text>Full Width</text>
				<value>fullwidth</value>
			</option> 
			<option>
				<text>Boxed Large</text>
				<value>boxed-lg</value>
			</option>
		</item>
		
		<item>
			<label>Layout Header</label>
			<block>header</block>
			<default>version-1</default>
			<option>
				<text>Header V1</text>
				<value>version-1</value>
			</option> 
			<option>
				<text>Header V2</text>
				<value>version-2</value>
			</option>
			<option>
				<text>Header V3</text>
				<value>version-3</value>
			</option>
			
		</item>

		
		<item>
			<label>Logo Type</label>
			<block>logo_type</block>
			<default>logo-theme</default>
			<option>
				<text>Logo In Theme</text>
				<value>logo-theme</value>
			</option> 
			<option>
				<text>Logo Opencart</text>
				<value>logo-opencart</value>
			</option> 
		</item>

		<item>
			<label>Offcanvas menu</label>
			<block>offcanvas</block>
			<default>category</default>
			<option>
				 <text>Category</text>
				 <value>category</value>
			</option> 
			<option>
				 <text>Megamenu</text>
				 <value>megamenu</value>
			</option>
			 
		</item>
		<item>
			<label>Main Content Home FullWidth</label>
			<block>home_container_full</block>
			<default>0</default>
			<option>
				<text>No</text>
				<value>0</value>
			</option> 
			<option>
				<text>Yes</text>
				<value>1</value>
			</option>
		</item>
		<item>
			<label>Enable Quickview</label>
			<block>Quickview</block>
			<default>0</default>
			<option>
				<text>Enable</text>
				<value>1</value>
			</option> 
			<option>
				<text>Disable</text>
				<value>0</value>
			</option>
		</item>

	</layout>
</themeeditor>